<Window x:Class="UVemyCliente.Utilidades.ExitoMensaje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UVemyCliente.Utilidades" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" Height="260" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="#479E85">
            <StackPanel Margin="10">
                <Image Source="/Recursos/success.png" Height="100" Width="100"/>
                <TextBlock Margin="0 5 0 0"
                    HorizontalAlignment="Center" FontSize="18" FontFamily="{StaticResource NunitoFont}" FontWeight="Bold" Foreground="#ffffff">Éxito</TextBlock>
            </StackPanel>
        </Border>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="18" FontFamily="{StaticResource NunitoFont}" Margin="20 20 20 10"
                   VerticalAlignment="Top" TextWrapping="Wrap">Se realizó la operación exitosamente</TextBlock>
    </Grid>
</Window>
